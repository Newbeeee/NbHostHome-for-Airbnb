<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nb_mainView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.newbeeee.qt.nbhosthomeforaribnb.MainActivity">


    <RelativeLayout
        android:id="@+id/nb_header"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/nb_toolBar"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/nb_imageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/nb_bg" />


        <android.support.design.widget.TabLayout
            android:id="@+id/nb_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:alpha="0.5"
            android:background="@color/bgGray" />
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/nb_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/nb_header"
        android:background="@color/bgGray" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/nb_toolBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

</RelativeLayout>
